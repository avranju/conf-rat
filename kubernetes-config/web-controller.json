{
  "kind":"ReplicationController",
  "apiVersion":"v1beta3",
  "metadata":{
    "name":"web-controller",
    "labels":{
      "name":"web-controller"
    }
  },
  "spec":{
    "replicas":2,
    "selector":{
      "name":"web"
    },
    "template":{
      "metadata":{
        "labels":{
          "name":"web"
        }
      },
      "spec":{
        "containers":[
          {
            "name":"cr-web",
            "image":"avranju/cr-web",
            "ports":[
              {
                "containerPort":3000,
                "protocol":"TCP"
              }
            ]
          }
        ]
      }
    }
  }
}

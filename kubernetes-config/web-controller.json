{
  "kind": "ReplicationController",
  "apiVersion": "v1",
  "metadata": {
    "name": "web-controller",
    "labels": {
      "name": "web-controller"
    }
  },
  "spec": {
    "replicas": 2,
    "selector": {
      "name": "cr-web"
    },
    "template": {
      "metadata": {
        "labels": {
          "name": "cr-web"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "cr-web",
            "image": "avranju/cr-web",
            "ports": [
              {
                "containerPort": 3000,
                "hostPort": 3000,
                "protocol": "TCP"
              }
            ]
          }
        ]
      }
    }
  }
}

{
  "id": "web-controller",
  "kind": "ReplicationController",
  "apiVersion": "v1beta1",
  "desiredState": {
    "replicas": 2,
    "replicaSelector": {"name": "web"},
    "podTemplate": {
      "desiredState": {
        "manifest": {
          "version": "v1beta1",
          "id": "web-controller",
          "containers": [{
            "name": "cr-web",
            "image": "avranju/cr-web",
            "cpu": 100,
            "ports": [{"containerPort": 3000, "hostPort": 3000}]
          }]
        }
      },
      "labels": {
        "name": "web"
      }
    }},
  "labels": {
    "name": "web"
  }
}
